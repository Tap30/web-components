{
  "name": "@tapsioss/theme",
  "description": "Theming package providing design tokens as CSS and JS variables for the Tapsi Design System.",
  "version": "0.7.0",
  "type": "module",
  "files": [
    "./dist",
    "./README.md"
  ],
  "homepage": "https://tap30.github.io/web-components",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tap30/web-components.git",
    "directory": "packages/theme"
  },
  "main": "./dist/default-theme/tokens.css",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/default-theme/tokens.css",
      "default": "./dist/default-theme/tokens.css"
    },
    "./css-variables": {
      "import": "./dist/default-theme/tokens.css",
      "default": "./dist/default-theme/tokens.css"
    },
    "./*/css-variables": {
      "import": "./dist/*/tokens.css",
      "require": "./dist/*/tokens.css"
    },
    "./tokens": {
      "types": "./dist/default-theme/tokens.d.ts",
      "default": "./dist/default-theme/tokens.js"
    },
    "./*/tokens": {
      "types": "./dist/*/tokens.d.ts",
      "default": "./dist/*/tokens.js"
    }
  },
  "scripts": {
    "clear": "shx rm -rf dist",
    "prebuild": "run-s clear generate",
    "build:transpile": "tsc --project tsconfig.build.json",
    "build:copy-css": "tsx ./scripts/copy-css-vars.ts",
    "build": "run-s build:transpile build:copy-css",
    "generate": "tsx ./scripts/generate.ts"
  },
  "dependencies": {
    "tslib": "^2.8.0"
  }
}
