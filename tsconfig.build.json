{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020",
    "outDir": "dist",
    "noEmit": false,
    "declaration": true,
    "incremental": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "allowJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["**/*.stories.ts", "**/*.test.ts", "node_modules", "dist"]
}
