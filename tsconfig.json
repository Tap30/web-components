{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "allowJs": false,
    "checkJs": false,
    "jsx": "react-jsx",

    "strict": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rewriteRelativeImportExtensions": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "importHelpers": true,

    "baseUrl": ".",
    "paths": {
      // Icons metadata
      "@tapsioss/icons": ["./packages/icons/dist", "types/@tapsioss/icons.ts"],
      "@tapsioss/icons/*": ["./packages/icons/dist/*"],
      // Web Component Icons
      "@tapsioss/web-icons": ["./packages/web-icons/dist"],
      "@tapsioss/web-icons/*": ["./packages/web-icons/dist/*"],
      // React Icons
      "@tapsioss/react-icons": ["./packages/react-icons/dist"],
      "@tapsioss/react-icons/*": ["./packages/react-icons/dist/*"],
      // Web Components
      "@tapsioss/web-components/*": [
        "./packages/web-components/dist/*",
        "./packages/web-components/src/*"
      ],
      // React Components
      "@tapsioss/react-components": [
        "./packages/react-components/dist",
        "./packages/react-components/src"
      ],
      "@tapsioss/react-components/*": [
        "./packages/react-components/dist/*",
        "./packages/react-components/src/*"
      ],
      // Tokens
      "@tapsioss/theme/*/css-variables": ["./packages/theme/src/*/tokens.css"],
      "@tapsioss/theme/css-variables": [
        "./packages/theme/src/default-theme/tokens.css"
      ],
      "@tapsioss/theme/*/tokens": ["./packages/theme/src/*/tokens.ts"],
      "@tapsioss/theme/tokens": ["./packages/theme/src/default-theme/tokens.ts"],
      "@tapsioss/theme/types": ["./packages/theme/src/types.ts"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "docs/.vitepress/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
